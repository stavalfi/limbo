  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "start:server1:watch": "bun run node --watch packages/server1/main.ts",
    "node": "node --experimental-strip-types --no-deprecation --no-warnings",
    "lint:biome": "biome lint .",
    "lint:eslint": "node --experimental-strip-types node_modules/.bin/eslint --max-warnings=0 --flag unstable_ts_config",
    "format:prettier": "prettier --write .",
    "prepare": "lefthook install",
    "generate-all-swagger-apis": "bun run node ./packages/libs/devex/src/generate-all-swagger-apis.ts",
    "build": "tsc --erasableSyntaxOnly",
    "build:watch": "bun run build --watch",
    "find-circular-imports": "madge --circular --ts-config ./tsconfig.json --extensions 'ts,tsx' --exclude 'node_modules|.devbox' *"
  },
  "imports": {
    "#libs/server-helper": "./packages/libs/server-helper/index.ts",
    "#libs/devex": "./packages/libs/devex/index.ts",
    "#libs/unit-test-infra": "./packages/libs/unit-test-infra/index.ts"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.36.0",
    "@hono/node-server": "^1.14.4",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^0.19.8",
    "hono": "^4.8.1",
    "lodash": "^4.17.21",
    "tsyringe": "^4.10.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@eslint/js": "^9.17.0",
    "@hey-api/openapi-ts": "^0.74.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/find-root": "^1.1.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.9",
    "@types/madge": "^5.0.3",
    "@types/node": "22.9.3",
    "@types/node-cleanup": "^2.1.5",
    "@typescript/native-preview": "^7.0.0-dev.20250620.1",
    "eslint": "9.10.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-github": "^5.1.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-await-in-promise": "^2.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "find-root": "^1.1.0",
    "jiti": "^2.4.2",
    "lefthook": "^1.11.6",
    "madge": "8.0.0",
    "nock": "^13.5.6",
    "node-cleanup": "^2.1.2",
    "npm": "^11.4.2",
    "oxlint": "^0.10.2",
    "swagger-typescript-api": "^13.2.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.33.1",
    "utility-types": "^3.11.0"
